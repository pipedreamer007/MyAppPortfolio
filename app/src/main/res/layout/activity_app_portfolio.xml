<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AppPortfolio">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/view_linearParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:id="@+id/txt_AppTitle"
            android:layout_weight="0"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_linearParent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/btn_Spotify"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#F08C35"
            android:layout_margin="5dp"
            android:onClick="saySpotify" />

        <Button
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:text="SCORES APP"
            android:id="@+id/btn_Scores"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#F08C35"
            android:layout_margin="5dp"
            android:onClick="sayScores" />

        <Button
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:text="LIBRARY APP"
            android:id="@+id/btn_Library"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#F08C35"
            android:layout_margin="5dp"
            android:onClick="sayLibrary" />

        <Button
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:text="BUILD IT BIGGER"
            android:id="@+id/btn_Build"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#F08C35"
            android:layout_margin="5dp"
            android:onClick="sayBuildItBigger" />

        <Button
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:text="XYZ READER"
            android:id="@+id/btn_XYZ"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#F08C35"
            android:layout_margin="5dp"
            android:onClick="sayXYZReader" />

        <Button
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/btn_Capstone"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#fff44336"
            android:layout_margin="5dp"
            android:onClick="sayCapstone" />
    </LinearLayout>

</RelativeLayout>
